@model PracticaASP.Models.Shoes


@{
    ViewData["Title"] = "Eliminar zapato";
}


<h1>Eliminar Zapato</h1>

<h3>¿Estás seguro que deseas eliminar este zapato?</h3>
<div>
    <h4>Shoes</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Brand.Name)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ShoesId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>